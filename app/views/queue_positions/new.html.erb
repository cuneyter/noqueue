<img src="Join.svg">
<div class="h1-header">
<h1>Welcome!</h1>
</div>
<h2>Secure your spot in the queue here, and avoid the hassle of standing in line.</h2>
<input type="text" name="mobile" placeholder="your mobile number">
<button>Secure my spot!</button>

<h1>Form to create a queue position</h1>
<%#
  <%= simple_form_for [ @store, @customer, @queue_position ] do |f| %>
    <%= f.input :mobile_number %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %> %>

