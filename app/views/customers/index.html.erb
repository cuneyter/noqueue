<%= render 'shared/navbar' %>
<%= render 'shared/flashes' %>

<div class="container mt-3">
  <div class="row">
    <div class="col-12 mx-auto text-center">
      <p class="fs-4">Hello <%= @store.store_name %>! <br> You have <span class="text-primary fs-1 fw-bolder"><%= @store.queue_positions.count %></span> customers <br> in the queue.</p>
    </div>

    <div class="col-12 mx-auto text-center mb-3">
      <%= image_tag "undraw_Traveling_re_weve.svg", width: 300, height: 200 %>
    </div>

    <div class="col-12 col-sm-8 mx-auto text-center">
      <ul class="list-group">
        <% @queue_positions.each do |queue_position| %>
          <li class="list-group-item list-group-item-action list-group-item-primary mb-1">
          <i class="fas fa-mobile-alt"></i> <%= queue_position.customer.mobile_number %> -- Position: <%= queue_position.position %> --
          <%= link_to "Entered!", remove_path(queue_position), class: "btn btn-danger btn-sm rounded-3", method: :delete, data: { confirm: "Are you sure you want to delete queue position #{queue_position.position}?" } %>
          </li>
        <% end %>
      </ul>
<%
=begin %>
      <div class="cards-customers">
        <% @queue_positions.each do |queue_position| %>
          <div class="card">
            <p><i class="fas fa-mobile-alt"></i> <%= queue_position.customer.mobile_number %></p>
            <p>Position: <%= queue_position.position %></p>
            <p>Entered: <%= queue_position.entered ? "Yes" : "No" %></p>
            <%= link_to "Delete", remove_path(queue_position), method: :delete, data: { confirm: "Are you sure you want to delete queue position #{queue_position.position}?" } %>
          </div>
        <% end %>
      </div>
<%
=end %>
    </div>
  </div>
</div>
