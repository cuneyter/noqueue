<div class="container mt-3">
  <div class="row">
    <div class="col-12 mx-auto text-center my-5">
      <%= image_tag "store_new_1.svg", width: 300, height: 200 %>
    </div>
    <div class="col-12 mx-auto text-center">
      <h1>Create a new store</h1>
    </div>
    <div class="col-12 col-sm-4 mx-auto text-center">
      <%= simple_form_for(@store) do |f| %>
        <div class= "">
          <%= f.input :store_name, label: 'Store Name:', class: "" %>
        </div>
        <div class= "">
          <%= f.input :store_capacity, label: 'Store Capacity:', class: "" %>
        </div>
        <div class= "">
          <%= f.input :logo_url, label: 'Store Logo URL:', class: "" %>
        </div>
        <%= f.submit "Save my Store!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>